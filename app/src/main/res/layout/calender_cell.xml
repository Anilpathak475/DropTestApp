<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:orientation="vertical">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentTop="true"
        android:background="#EFEFF3" />

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/top_view"
        android:padding="0.20dp">

        <ImageView
            android:id="@+id/img_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/state"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txt_month_name"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-5dp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/img_chk_bulk"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/img_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:contentDescription="@string/bulk"
            android:background="@drawable/ic_check_black"
            android:visibility="gone" />

        <View
            android:id="@+id/event_view"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_below="@id/img_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/small_circle_black" />
    </RelativeLayout>

</RelativeLayout>
