<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cityzipcorp.customer.activities.AddressActivity">

    <EditText
        android:id="@+id/edt_selected_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:autoText="true"
        android:hint="Selected Address"
        android:paddingStart="15dp"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edt_landmark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:hint="Set Landmark"
        android:paddingStart="15dp"
        android:textSize="22sp" />

    <AutoCompleteTextView
        android:id="@+id/act_area"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:hint="Select Area"
        android:paddingStart="15dp"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:paddingStart="15dp"
        android:text="Pune"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/txt_state"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:paddingStart="15dp"
        android:text="Maharastra"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/txt_pin_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:paddingStart="15dp"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_red"
        android:text="Update"
        android:textColor="@color/white" />
</LinearLayout>
